<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/chat_left_qp"
    android:clickable="true"
    android:gravity="center"
    android:orientation="horizontal">

    <com.mingke.newmoduo.view.widget.AudioPlayButton
        android:id="@+id/id_btn_audio_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/id_tv_audio_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/chat_horizontal_margin"
        android:clickable="false"
        android:text="fff" />
</LinearLayout>