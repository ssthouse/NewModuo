<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/chat_right_qp"
    android:gravity="center"
    android:clickable="true"
    android:orientation="horizontal">

    <TextView
        android:text="0''"
        android:textColor="@color/white"
        android:clickable="true"
        android:id="@+id/id_tv_audio_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/chat_horizontal_margin" />

    <com.mingke.newmoduo.view.widget.AudioPlayButton
        android:id="@+id/id_btn_audio_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>